{
    "name": "swoft-rewrite/swoft-annotation",
    "description": "分布式开始，重写swoft框架之 -- annotation 模块",
    "keywords": ["swoft","annotation"],
    "license": "MIT",
    "authors": [
        {
            "name": "zhanghongbo",
            "email": "taobao1875@163.com"
        }
    ],
    "minimum-stability":"dev",
    "require": {
        "php": ">7.1.0",
        "doctrine/annotations": "^1.4",
        "swoft-rewrite/swoft-stdlib": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5"
    },
    "autoload": {
        "psr-4":{
            "SwoftRewrite\\Annotation\\":"src/"
        }
    },
    "autoload-dev":{
        "psr-4": {
            "SwoftTest\\Annotation\\Unit\\": "test/unit/",
            "SwoftTest\\Annotation\\Testing\\": "test/testing/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit -c phpunit.xml"
    }
}
